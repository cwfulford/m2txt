cmd=`basename $0`
ver=`echo "$Id: m2txt,v 1.4 2016/03/03 10:22:49 fulford Exp fulford $"|awk '{print $3,$4,$5}'`
syntax="$cmd [-c <configfile>] [-d] [-h <hostid>] [-v]|-V"
while [ $# -gt 0 ] ;do
	case $1 in 
		-c) config=$2;shift 2;;
		-d) set -x;debug=0;shift;;
		-v) verbose=:;shift;;
		-V) echo "$cmd $Revision: 1.4 $ $Date: 2016/03/03 10:22:49 $"|
		    awk '{print $1,$3,$6}'
	 	    exit;;  
		 *) shift;;
	esac
done
txt=07935728612@txtlocal.co.uk

config=${config:-/usr/local/etc/${cmd}.cf}
#[ -r $config ]||{echo $cmd: Can't find $config;exit 1}
#eval `sed <$config -ne "/^$hostid:/,/^$/{/^[\t ]*[^#].*/p}"`
mailx -s "$1 $2" $txt </dev/null
